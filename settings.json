{
    // Rust Development Configuration
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.cargo.target": null,
    "rust-analyzer.server.path": null,
    "rust-analyzer.cargo.features": [],
    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.cargo.runBuildScripts": true,
    "rust-analyzer.lens.run.enable": true,
    "rust-analyzer.lens.debug.enable": true,
    "rust-analyzer.completion.autoimport.enable": true,
    "rust-analyzer.completion.autoself.enable": true,
    "rust-analyzer.hover.actions.enable": true,
    "rust-analyzer.hover.actions.debug.enable": true,
    "rust-analyzer.hover.actions.run.enable": true,
    "rust-analyzer.hover.actions.gotoTypeDef.enable": true,
    "rust-analyzer.inlayHints.enable": true,
    "rust-analyzer.inlayHints.typeHints.enable": true,
    "rust-analyzer.inlayHints.parameterHints.enable": true,
    "rust-analyzer.inlayHints.chainingHints.enable": true,
    "rust-analyzer.inlayHints.closingBraceHints.enable": true,

    // Editor Configuration
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.rulers": [100],
    "editor.wordWrap": "on",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    // File Associations
    "files.associations": {
        "*.rs": "rust",
        "Cargo.toml": "toml",
        "Cargo.lock": "toml"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/target": true,
        "**/*.rs.bk": true
    },

    // Search Configuration
    "search.exclude": {
        "**/target/**": true,
        "**/node_modules/**": true,
        "**/.git/**": true
    },

    // Terminal Configuration
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.env.osx": {
        "PATH": "${env:PATH}:/opt/homebrew/bin"
    },

    // Git Configuration
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,

    // Extensions Configuration
    "emmet.excludeLanguages": ["rust"],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/target/**": true
    },

    // Workspace Configuration
    "workspace.workspaceFolder": "${workspaceFolder}",
    "rust-analyzer.files.excludeDirs": [
        "target",
        ".git",
        "node_modules"
    ],

    // Testing Configuration
    "rust-analyzer.cargo.testOptions": {
        "args": ["--lib"]
    },

    // Debugging Configuration
    "debug.openDebug": "openOnDebugBreak",

    // Custom Tasks
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "cargo build",
                "type": "shell",
                "command": "cargo",
                "args": ["build"],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "presentation": {
                    "echo": true,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "shared"
                },
                "problemMatcher": "$rustc"
            },
            {
                "label": "cargo test",
                "type": "shell",
                "command": "cargo",
                "args": ["test"],
                "group": {
                    "kind": "test",
                    "isDefault": true
                },
                "presentation": {
                    "echo": true,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "shared"
                }
            },
            {
                "label": "cargo run",
                "type": "shell",
                "command": "cargo",
                "args": ["run"],
                "group": "build",
                "presentation": {
                    "echo": true,
                    "reveal": "always",
                    "focus": false,
                    "panel": "shared"
                }
            },
            {
                "label": "cargo check",
                "type": "shell",
                "command": "cargo",
                "args": ["check"],
                "group": "build",
                "presentation": {
                    "echo": true,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "shared"
                }
            },
            {
                "label": "cargo fmt",
                "type": "shell",
                "command": "cargo",
                "args": ["fmt"],
                "group": "build",
                "presentation": {
                    "echo": true,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "shared"
                }
            },
            {
                "label": "cargo clippy",
                "type": "shell",
                "command": "cargo",
                "args": ["clippy", "--", "-D", "warnings"],
                "group": "build",
                "presentation": {
                    "echo": true,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "shared"
                }
            },
            {
                "label": "cargo watch",
                "type": "shell",
                "command": "cargo",
                "args": ["watch", "-x", "check"],
                "group": "build",
                "presentation": {
                    "echo": true,
                    "reveal": "always",
                    "focus": false,
                    "panel": "dedicated"
                },
                "isBackground": true
            }
        ]
    },

    // Launch Configuration
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Debug I.O.R.A.",
                "type": "lldb",
                "request": "launch",
                "program": "${workspaceFolder}/target/debug/iora",
                "args": [],
                "cwd": "${workspaceFolder}",
                "preLaunchTask": "cargo build",
                "sourceLanguages": ["rust"]
            },
            {
                "name": "Debug I.O.R.A. (Release)",
                "type": "lldb",
                "request": "launch",
                "program": "${workspaceFolder}/target/release/iora",
                "args": [],
                "cwd": "${workspaceFolder}",
                "preLaunchTask": "cargo build --release",
                "sourceLanguages": ["rust"]
            },
            {
                "name": "Debug Tests",
                "type": "lldb",
                "request": "launch",
                "program": "${workspaceFolder}/target/debug/deps/iora-*",
                "args": ["--lib"],
                "cwd": "${workspaceFolder}",
                "preLaunchTask": "cargo build --tests",
                "sourceLanguages": ["rust"]
            }
        ]
    }
}
