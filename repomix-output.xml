impl BufferPool {
    fn get_buffer(&mut self, capacity: usize) -> BytesMut {
        // Try to reuse existing buffer
        if let Some(mut buffer) = self.buffers.pop() {
            if buffer.capacity() >= capacity {
                buffer.clear();
                return buffer;
            }
