        // Check cooldown
        let last_alerts = self.last_alerts.read().await;
        if let Some(last_alert) = last_alerts.get(&alert_key) {
            if Utc::now() - *last_alert < self.alert_cooldown {
                return; // Skip alert due to cooldown
            }
        }
        drop(last_alerts);

        // Generate alert
