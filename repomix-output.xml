        use flate2::write::GzEncoder;
        use std::io::Write;

        let mut encoder = GzEncoder::new(Vec::new(), flate2::Compression::fast());
        encoder.write_all(&data)?;
        let compressed = encoder.finish()?;

        Ok(Bytes::from(compressed))
    }
