        // Arrange
        let processor = DataProcessor::new(config).await.unwrap();

        // Act
        let result = processor.process_symbol("BTC").await;

        // Assert
        assert!(result.is_ok());
        assert!(result.unwrap().price > 0.0);
    }

    #[tokio::test]
