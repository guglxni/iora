        let decrypted = base64::engine::general_purpose::STANDARD
            .decode(&encrypted)
            .map_err(|_| ConfigError::InvalidKeyFormat(provider.to_string()))?;

        String::from_utf8(decrypted)
            .map_err(|_| ConfigError::InvalidKeyFormat(provider.to_string()))
    }
}

