import json
import pathlib
import subprocess
import tarfile
import time

ROOT = pathlib.Path(".")
arts = sorted([p for p in (ROOT / "artifacts").glob("20*") if p.is_dir()])
assert arts, "No artifacts found"
run = arts[-1]
outdir = ROOT / "artifacts" / "bundles"
