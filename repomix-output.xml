# capture git info
def git(cmd: list[str]) -> str:
    return subprocess.run(["git"] + cmd, capture_output=True, text=True).stdout.strip()


meta = {
    "git": {
        "commit": git(["rev-parse", "HEAD"]),
        "branch": git(["rev-parse", "--abbrev-ref", "HEAD"]),
        "status": git(["status", "--porcelain"]),
