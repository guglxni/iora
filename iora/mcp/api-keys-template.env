# IORA MCP Server - API Keys Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# CRYPTOCURRENCY DATA APIS (All have FREE tiers)
# =============================================================================

# CoinGecko API - Free tier: 30 calls/minute
# Get from: https://coingecko.com/en/api
COINGECKO_API_KEY=your_coingecko_api_key_here

# CoinMarketCap API - Free tier: 10,000 calls/month  
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Binance API - Free for market data
# Get from: https://binance.com/en/binance-api (Optional)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_here

# CryptoCompare API - Free tier: 100,000 calls/month
# Get from: https://cryptocompare.com/cryptopian/api-keys (Optional)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# =============================================================================
# AI PROVIDER APIS (All have FREE tiers/credits)
# =============================================================================

# Google Gemini API - Free tier: 15 requests/minute
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Mistral AI API - $5 free credits
# Get from: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenAI API - $5 free credits (Optional)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection (Self-hosted via Docker)
# Database URL for PostgreSQL connection pool
DATABASE_URL=postgresql://iora_user:iora_password_2024@localhost:5432/iora_dev

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=30000

# Redis Cache Configuration (Self-hosted via Docker)
# Redis URL for caching and rate limiting
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=iora:
REDIS_TTL_DEFAULT=3600

# =============================================================================
# BLOCKCHAIN & NFT APIS
# =============================================================================

# Solana RPC URL - Free public endpoint
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Crossmint API - Free tier for testing
# Get from: https://crossmint.com/
CROSSMINT_API_KEY=your_crossmint_api_key_here

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# Server Settings
PORT=7070
NODE_ENV=production
LOG_LEVEL=info

# Coral Protocol Settings
CORAL_REGISTRY_AUTO_REGISTER=false
CORAL_REGISTRY_URL=https://registry.modelcontextprotocol.io
CORAL_SERVER_URL=http://localhost:7070

# MCP Registry Settings
MCP_REGISTRY_ENABLED=false
MCP_REGISTRY_URL=https://registry.modelcontextprotocol.io
MCP_SERVER_ID=65547a30-40fe-49e0-91d5-6c80a2cf6c94
MCP_SERVER_VERSION=1.0.0

# Security Settings (Will be generated automatically)
HMAC_SECRET=will_be_generated_automatically

# =============================================================================
# CLERK AUTHENTICATION (Multi-Tenant User Auth)
# =============================================================================

# Clerk API Keys - Get from: https://dashboard.clerk.com
# Free tier: 10,000 Monthly Active Users (MAUs)
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk Webhook Secret (for subscription/user events)
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Performance Settings
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000

# Monitoring Settings
ENABLE_TELEMETRY=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# TESTING COMMANDS
# =============================================================================

# Test CoinGecko API:
# curl "https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd&x_cg_demo_api_key=$COINGECKO_API_KEY"

# Test CoinMarketCap API:
# curl -H "X-CMC_PRO_API_KEY: $COINMARKETCAP_API_KEY" "https://pro-api.coinmarketcap.com/v1/cryptocurrency/quotes/latest?symbol=BTC"

# Test Gemini AI API:
# curl -H "Content-Type: application/json" -d '{"contents":[{"parts":[{"text":"What is Bitcoin?"}]}]}' "https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent?key=$GEMINI_API_KEY"

# Test Database Connection:
# docker exec -it iora-postgres psql -U iora_user -d iora_dev -c "SELECT version();"

# Test Redis Connection:
# docker exec -it iora-redis redis-cli ping

# =============================================================================
# NOTES
# =============================================================================

# 1. All APIs listed have free tiers - start there
# 2. Upgrade to paid tiers after marketplace revenue
# 3. Never commit actual API keys to version control
# 4. Use environment variables in production
# 5. Rotate keys regularly for security
